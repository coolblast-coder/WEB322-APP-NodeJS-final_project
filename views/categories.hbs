<div class="row">
  <div class="col-md-12 table-responsive">
          <h2>Categories</h2>
          <hr />

          {{!-- <p>TODO: render a list of all category id's and categories here</p> --}}

<table class="table">
                <thead>
                    <tr>
                        <th scope="col">Category ID</th>
                        <th scope="col">Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
    {{!-- If no categories --}}
    {{#unless posts}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>

 {{/unless}}
  
</div>
